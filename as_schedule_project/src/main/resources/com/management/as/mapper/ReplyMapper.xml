<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

  
<mapper namespace="com.management.as.mapper.ReplyMapper">
	<insert id="insert">
	
		insert into reply(bno, reply, replyer)
		value(#{bno}, #{reply}, #{replyer})
		
	</insert>
	
	<select id="list" resultType="com.management.as.domain.ReplyVO">
		select * from reply
		where bno = #{bno}
	</select>
	
	<update id="update">
		
		update reply
		set reply = #{reply},
		updatedate = sysdate()
		where rno = #{rno}
	
	
	</update>
	
	<delete id="delete">
		<![CDATA[
		DELETE FROM reply 
		WHERE rno = #{rno}
		]]>
	</delete>
	
	
	
</mapper>